<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundashboard"
    tools:context=".Dashboard">


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="20dp"
            android:textColor="@color/MArketlab_main_color"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mochamad Lutfi"
            android:textSize="25dp"
            android:textColor="@color/MArketlab_main_color"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website Developer"
            android:textSize="18dp"
            android:textColor="@color/MArketlab_main_color"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT MARKETLAB KREATIF INDONESIA"
            android:textSize="15dp"
            android:textColor="@color/MArketlab_main_color"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="180dp"
            app:layout_column="1"
            android:layout_marginTop="-70dp"
            app:layout_row="4"
            app:srcCompat="@drawable/upi_web" />


    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>